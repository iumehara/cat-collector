<%= link_to(edit_good_path(good), id: "good-#{good.id}") do %>
	<div class="good-card">
		<h1 class='name'>
			<%= good.name %>
		</h1>
		<div class='image'>
			<%= image_tag good.image %>
		</div>

		<h2 class="price">
			<div>
				<span class='denom'>fish</span>
				<span class='price'><%= good.price_value %></span>
			</div>
		</h2>
	</div>

<% end %>